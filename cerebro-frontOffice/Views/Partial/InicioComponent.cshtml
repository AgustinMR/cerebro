<div>
    <div class="w3-top">
        <div class="w3-bar w3-cerebro-blue w3-top w3-left-align w3-card-4" style="height: 44px">
            <a class="w3-bar-item w3-button w3-left w3-hide-large w3-hover-white w3-large w3-theme-l1" href="javascript:void(0)" onclick="w3_open()">&#9776;</a>
            <img src="~/images/cerebro.png" style="height: 44px" class="w3-bar-item w3-button w3-hover-cerebro-blue">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Logout"><img src="~/images/exit.png" class="w3-bar-item w3-right" style="height: 37px; margin-top: 3px"></a>
            }
            <span class="w3-bar-item w3-right">User</span>
        </div>
    </div>
    <nav class="w3-sidebar w3-bar-block w3-collapse w3-animate-left w3-card" style="z-index:3;width:180px;margin-top:44px; background-color: #FBFBFB" id="sidebar">
        <a class="w3-bar-item w3-button w3-hover-light-grey w3-hover-text-cerebro-red" (click)="showAgrupacion()">Agrupaciones</a>
        <a class="w3-bar-item w3-button w3-hover-light-grey w3-hover-text-cerebro-red" (click)="showChat()">Chat</a>
        <a class="w3-bar-item w3-button w3-hover-light-grey w3-hover-text-cerebro-red">Eventos</a>
        <a class="w3-bar-item w3-button w3-hover-light-grey w3-hover-text-cerebro-red">Reportes</a>
    </nav>
    <div class="w3-main" style="margin-left:180px">
        <div class="w3-container w3-padding-64">
            <div class="w3-content">
                <div>
                    <div id="map" class="map w3-card"></div>
                </div>
                <cerebro-agrupacion-component *ngIf="agrupacion"></cerebro-agrupacion-component>
                <cerebro-chat-component *ngIf="chat"></cerebro-chat-component>
            </div>
        </div>
    </div>
</div>

