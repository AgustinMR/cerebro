<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Cerebro">
    <meta name="author" content="Grupo 17 - TSI1 - 2017">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login | Cerebro</title>
    <link rel="stylesheet" href="~/css/w3.css">
    <link rel="stylesheet" href="~/css/site.css">
    <script src="~/js/jquery.js"></script>
    <script src="~/js/site.js"></script>
</head>

<body class="w3-cerebro-blue" style="background-color: #40485a">
    <div style="height: 100%; width: 100%" class="w3-cerebro-blue"><div class="bgimg-3 w3-cerebro-blue" id="backgr"></div></div>
    <div class="w3-bar w3-top">
        <div class="w3-content">
            <img src="~/images/cerebro.png" style="height:30px; margin-left: 16px; margin-top: 6px">
        </div>
    </div>
    <div class="w3-col s12 m8 l6 w3-container">
        <div class="w3-panel w3-white w3-round w3-display-middle w3-card-4" style="min-width: 400px">
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                <div class="w3-center"><img src="~/images/cerebro-logo.png" class="w3-image w3-margin-top" style="height: 45px"></div><hr>
                <label for="email" class="w3-text-cerebro-blue"><strong>Email:</strong></label>
                <input type="email" name="email" id="email" class="w3-input w3-padding w3-border w3-round w3-hover-border-cerebro-red w3-margin-bottom" placeholder="Ingrese su direcci&oacute;n de correo">
                <label for="pass" class="w3-text-cerebro-blue"><strong>Contrase&ntilde;a:</strong></label>
                <input type="password" name="pass" id="password" class="w3-input w3-padding w3-border w3-round w3-hover-border-cerebro-red w3-margin-bottom" placeholder="Ingrese su contrase&ntilde;a"><hr>
                <button type="submit" class="w3-button w3-input w3-border w3-border-cerebro-red w3-round w3-text-cerebro-red w3-margin-bottom w3-hover-cerebro-red">Iniciar Sesi&oacute;n</button>
            </form>
            <button class="w3-button w3-input w3-border w3-border-facebook w3-round w3-text-facebook w3-hover-facebook"><img src="~/images/facebook1.png" class="w3-left w3-centered" style="height: 27px">Iniciar Sesi&oacute;n con Facebook</button>
            <button class="w3-button w3-input w3-margin-top w3-margin-bottom w3-border w3-round w3-border-twitter w3-text-twitter w3-hover-twitter w3-centered"><img src="~/images/twitter1.png" class="w3-left" style="height: 27px">Iniciar Sesi&oacute;n con Twitter</button>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            "use strict";
            blurBackground();
        });
    </script>
</body>

</html>
